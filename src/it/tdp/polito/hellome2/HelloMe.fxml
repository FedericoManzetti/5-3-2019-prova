<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="217.0" prefWidth="344.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.4" fx:controller="it.tdp.polito.hellome2.HelloMeController">
   <top>
      <Label text="Programma HelloMe" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="txtNome" promptText="Inserisci nome...">
                     <padding>
                        <Insets top="6.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="9.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnCiao" mnemonicParsing="false" onAction="#handleCiao" text="Ciao" />
               </children>
            </HBox>
            <TextArea fx:id="txtResult">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
</BorderPane>
